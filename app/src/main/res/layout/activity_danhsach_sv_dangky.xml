<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinhVien.DanhSach.DsDangKy"
    tools:ignore="MissingConstraints"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@color/blue"
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_quaylai" />
        <SearchView
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:iconifiedByDefault="false"
            android:queryHint="Tìm kiếm sinh viên"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRestartDK"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_reload"
            android:backgroundTint="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:backgroundTint="@color/blue"
        android:background="@drawable/design_button_blue">

        <TextView
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách đăng ký"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
        <ListView

            android:id="@+id/lvNguoiMuon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>



</LinearLayout>