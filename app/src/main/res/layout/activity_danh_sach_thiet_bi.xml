<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThietBi.ThietBi"
    tools:ignore="MissingConstraints"
    android:orientation="vertical"

    android:theme="@style/Theme.QuanLyThietBi"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <ImageButton
            android:backgroundTint="#6A00FF"
            android:id="@+id/btnQuaylaiMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_quaylai" />

        <SearchView

            android:id="@+id/search"
            android:layout_width="247dp"
            android:layout_height="45dp"
            android:iconifiedByDefault="false"
            android:queryHint="Tìm kiếm thiết bị"
            tools:layout_editor_absoluteY="3dp" >

        </SearchView>

        <Button
            android:id="@+id/btnLoc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lọc" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/xanh_nhạt">
        <TextView

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách Thiết bị"
            android:textSize="20sp"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableThietBi"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@+id/search"
        tools:layout_editor_absoluteX="0dp">



        <ListView

            android:id="@+id/lvthietbi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:background="@color/white" />
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageButton

            android:id="@+id/btnRestartTB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_reload"
            android:backgroundTint="#6A00FF" />

        <ImageButton

            android:id="@+id/btnThem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_addlist"
            android:backgroundTint="#6A00FF"
            />
        <ImageButton
            android:id="@+id/btnChange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_eye"
            android:backgroundTint="#6A00FF" />

    </LinearLayout>

</LinearLayout>